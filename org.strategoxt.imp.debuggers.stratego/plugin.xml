<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="org.strategoxt.imp.debuggers.stratego.launching.StrLaunchShortcut"
            icon="icons/strategoxt_logo_16.png"
            id="org.strategoxt.imp.debuggers.stratego.launchShortcut"
            label="Stratego Program"
            modes="run,debug">
         <description
               description="Run a local Stratego program"
               mode="run">
         </description>
         <description
               description="Debug a local Stratego program"
               mode="debug">
         </description>
         <configurationType
               id="org.strategoxt.imp.debuggers.stratego.launchConfigurationType">
         </configurationType>
         <contextualLaunch>
            <enablement>
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.str">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </enablement>
         </contextualLaunch>
      </shortcut>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="org.strategoxt.imp.debuggers.stratego.launching.StrLaunchDelegate"
            id="org.strategoxt.imp.debuggers.stratego.launchConfigurationType"
            modes="run,debug"
            name="Stratego"
            sourceLocatorId="org.strategoxt.imp.debuggers.stratego.sourceLocator"
            sourcePathComputerId="org.strategoxt.imp.debuggers.stratego.sourcePathComputer">
      </launchConfigurationType>
      <launchConfigurationType
            delegate="org.strategoxt.imp.debuggers.stratego.launching.StrRemoteLaunchDelegate"
            id="org.strategoxt.imp.debuggers.stratego.remoteLaunchConfigurationType"
            modes="run,debug"
            name="Remote Stratego"
            sourceLocatorId="org.strategoxt.imp.debuggers.stratego.sourceLocator"
            sourcePathComputerId="org.strategoxt.imp.debuggers.stratego.sourcePathComputer">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="org.strategoxt.imp.debuggers.stratego.launching.ui.StrTabGroup"
            description="Run a Stratego program"
            id="org.strategoxt.imp.debuggers.stratego.launchConfigurationTabGroup"
            type="org.strategoxt.imp.debuggers.stratego.launchConfigurationType">
      </launchConfigurationTabGroup>
      <launchConfigurationTabGroup
            class="org.strategoxt.imp.debuggers.stratego.launching.ui.RemoteStrTabGroup"
            description="Remote Stratego Program"
            id="org.strategoxt.imp.debuggers.stratego.remoteLaunchConfigurationTabGroup"
            type="org.strategoxt.imp.debuggers.stratego.remoteLaunchConfigurationType">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="org.strategoxt.imp.debuggers.stratego.launchConfigurationType"
            icon="icons/strategoxt_logo_16.png"
            id="org.strategoxt.imp.debuggers.stratego.launchConfigurationTypeImage">
      </launchConfigurationTypeImage>
      <launchConfigurationTypeImage
            configTypeID="org.strategoxt.imp.debuggers.stratego.remoteLaunchConfigurationType"
            icon="icons/strategoxt_logo_16.png"
            id="org.strategoxt.imp.debuggers.stratego.remoteLaunchConfigurationTypeImage">
      </launchConfigurationTypeImage>
   </extension>
   <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            class="org.strategoxt.imp.debuggers.stratego.model.StrLineBreakpoint"
            id="org.strategoxt.imp.debuggers.stratego.lineBreakpoint"
            markerType="org.strategoxt.imp.debuggers.stratego.lineBreakpoint.marker">
      </breakpoint>
   </extension>
   <extension
         id="org.strategoxt.imp.debuggers.stratego.lineBreakpoint.marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.debug.core.lineBreakpointMarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.debug.ui.debugModelPresentations">
      <debugModelPresentation
            class="org.strategoxt.imp.debuggers.stratego.model.StrDebugModelPresentation"
            id="org.strategoxt.imp.debuggers.stratego">
      </debugModelPresentation>
   </extension>
   <extension
         point="org.eclipse.debug.core.statusHandlers">
      <statusHandler
            class="org.strategoxt.imp.debuggers.stratego.model.StrStatusHandler"
            code="0"
            id="org.strategoxt.imp.debuggers.stratego.statusHandler"
            plugin="org.strategoxt.imp.debuggers.stratego">
      </statusHandler>
   </extension>
   <extension
         point="org.eclipse.debug.core.sourceLocators">
      <sourceLocator
            class="org.strategoxt.imp.debuggers.stratego.source.StrSourceLookupDirector"
            id="org.strategoxt.imp.debuggers.stratego.sourceLocator"
            name="Stratego Source Lookup Director">
      </sourceLocator>
   </extension>
   <extension
         point="org.eclipse.debug.core.sourcePathComputers">
      <sourcePathComputer
            class="org.strategoxt.imp.debuggers.stratego.source.StrSourcePathComputerDelegate"
            id="org.strategoxt.imp.debuggers.stratego.sourcePathComputer">
      </sourcePathComputer>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.toggleBreakpointHandler">
          <toggleBreakpointHandler class="org.strategoxt.imp.debuggers.stratego.model.StrToggleHandler" language="Stratego-Sugar">
          </toggleBreakpointHandler>
   </extension>

</plugin>
